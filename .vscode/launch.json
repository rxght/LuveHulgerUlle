    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cpp Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/batako.exe",
            "args": [],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "LLDB Debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=batako",
                    "--package=batako"
                ],
                "filter": {
                    "name": "batako",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "LLDB Debug Unit Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=batako",
                    "--package=batako"
                ],
                "filter": {
                    "name": "batako",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}