// Workspace settings
{
    "files.exclude": {
        "": true,
        ".gitignore": true,
        "Cargo.lock": true,
        "shaders/*.frag": true,
        "shaders/*.vert": true,
        "target": true
    },
    "rust-analyzer.showUnlinkedFileNotification": false,
    "files.associations": {
        "*.tsx": "xml",
        "*.tmx": "xml"
    },
    "glsllint.glslangValidatorArgs": [
        "-V"
    ],
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "lldb.script": { "lang.rust.toolchain": "stable-x86_64-pc-windows-gnu" }
}